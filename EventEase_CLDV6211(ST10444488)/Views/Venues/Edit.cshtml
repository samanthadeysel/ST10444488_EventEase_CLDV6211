@model EventEase_CLDV6211_ST10444488_.Models.Venue

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h4>Venue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VenueID" />
            <input type="hidden" asp-for="ImageURL" />
            <div class="form-group">
                <label asp-for="VenueName" class="control-label"></label>
                <input asp-for="VenueName" class="form-control elegant-input" />
                <span asp-validation-for="VenueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control elegant-input" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control elegant-input" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <@if (!string.IsNullOrEmpty(Model.ImageURL))
            {
            <div class="form-group">
                <label>Current Image:</label><br />
                <img src="@Model.ImageURL" alt="Venue Image" class="img-thumbnail" width="200" />
            </div>
            }
            <div class="form-group">
                <label for="photoFile">Replace Image</label>
                <input type="file" name="photoFile" class="form-control" />
            </div>
            <div class="form-group">
                <label for="photoFile">Replace Image:</label>
                <input type="file" name="photoFile" accept="image/*" class="form-control" />
            </div>

            <div class="mt-3">
                    <input type="submit" value="Save" class="btn btn-blush" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
