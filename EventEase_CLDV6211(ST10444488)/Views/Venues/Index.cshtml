@model IEnumerable<EventEase_CLDV6211_ST10444488_.Models.Venue>

@{
    ViewData["Title"] = "Venue";
}

<h1>Venue</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn-create">Add New Venue</a>
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="form-group">
        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Search by name or location" class="form-control mb-2" />
    </div>
    <div class="form-group">
        <label for="availabilityDate">Available on date:</label>
        <input type="date" name="availabilityDate" value="@ViewBag.AvailabilityDate" class="form-control mb-2" required />
    </div>
    <button type="submit" class="btn-create">Check Availability</button>
</form>

@if ((ViewBag.AvailabilityDate != null || !string.IsNullOrEmpty(ViewBag.SearchTerm as string)) && !Model.Any())
{
    <div class="alert alert-info">
        No venues found matching your search.
    </div>
}

@foreach (var venue in Model)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@venue.VenueName</h5>
            <p><strong>Location:</strong> @venue.Location</p>
            <p><strong>Capacity:</strong> @venue.Capacity</p>

            @if (!string.IsNullOrEmpty(venue.ImageURL))
            {
                <img src="@venue.ImageURL" alt="Venue Image" class="img-thumbnail mb-2" width="200" />
            }
            else
            {
                <img src="/images/placeholder.png" alt="No Image Available" class="img-thumbnail mb-2" width="200" />
            }

            @if (ViewBag.AvailabilityDate != null)
            {
                <span class="badge badge-success">Available on @ViewBag.AvailabilityDate</span>
            }

            <div class="mt-3">
                <a asp-action="Details" asp-route-id="@venue.VenueID" class="btn btn-outline-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@venue.VenueID" class="btn btn-outline-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@venue.VenueID" class="btn btn-outline-danger btn-sm">Delete</a>
            </div>
        </div>
    </div>
}
